{
  "name": "daily-kanji",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "biome check --write .",
    "lint:fix": "biome check --fix .",
    "lint:check": "biome check .",
    "preview": "vite preview",
    "all:check": "run-s lint lint:check lint:fix test:ui validate validate:readings build validate:comprehensive",
    "test": "vitest --run",
    "test:ui": "vitest --run",
    "prepare": "husky",
    "validate": "tsx src/scripts/validateAllRequirements.ts",
    "validate:readings": "python3 src/data/kanji-readings/validate_kanji_readings_v2.py",
    "validate:grade": "tsx src/scripts/validateGradeKanji.ts",
    "validate:target": "tsx src/scripts/validateTargetKanji.ts",
    "validate:comprehensive": "tsx src/scripts/validateComprehensiveGradeKanji.ts",
    "validate:all": "run-s test:ui validate validate:readings"
  },
  "dependencies": {
    "@biomejs/biome": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jotai": "^2.12.5",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.53.1",
    "postcss": "^8.5.6",
    "react": "^19.0.0-rc.1",
    "react-dom": "^19.0.0-rc.1",
    "tailwindcss": "^4.1.10",
    "tesseract.js": "^6.0.1",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
